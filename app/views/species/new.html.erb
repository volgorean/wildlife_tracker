<% if @species.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
      <% @species.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<form class="form-inline" action="/species/new" method="post">
  <input class="form-control" id="species_name" name="species[name]" type="text" placeholder="Name">
  <button type="submit">New Species</button>
</form>

<h1>Current Indexed Species</h1>

<p><% @currSpecies.each do |species| %>
    <a data-method="delete" href="/species/<%= species.id %>"><%= species.name %></a>,
<% end %>...(click to delete)</p>
<a href="/sightings/new"><button>Return</button></a>
